<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="Dependencies.props" />
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>LEGACY</RootNamespace>
    <AssemblyName>LEGACY</AssemblyName>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>preview</LangVersion>
    <!--
      Due to the nature of coding with IL2CPP, unsafe blocks will be allowed by default.
    -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>x64</Platforms>
    <OutputPath>G:\SteamLibrary\steamapps\common\GTFO\BepInEx\plugins</OutputPath>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="LEGACY.cs" />
    <Compile Include="LEGACY.Utilities.cs" />
    <Compile Include="ExtraEventsConfig_SpawnEnemyWave_Custom.cs" />
    <Compile Include="Patch_FixScoutFreeze.cs" />
    <Compile Include="Patch_EventsOnBossDeath.cs" />
    <Compile Include="Patch_EventsOnZoneScoutScream.cs" />
    <Compile Include="Patch_ExtraEventsConfig.cs" />
    <Compile Include="Patch_ChangeElevatorCargo_Hardcoded.cs" />
    <Compile Include="Patch_LG_SecurityDoor_Fix-EventsOnUnlockDoor_Powergenerator.cs" />
    <Compile Include="Patch_LockSecurityDoor_FixCustomText.cs" />
    <Compile Include="Patch_OverwriteSurvivalWaveSpawnPosition_Hardcoded.cs" />
    <Compile Include="Patch_HardcodedBehaviour_L3E2.cs" />
    <Compile Include="Patch_PickupItem_Hardcoded.cs" />
    <Compile Include="Patch_ReactorShutdown.cs" />
    <Compile Include="Patch_ReactorStartup_ExtraEventsExecution.cs" />
    <Compile Include="Patch_ReactorStartup_OverwriteGUIBehaviour.cs" />
    <Compile Include="Patch_RepeatableCommandEventFix.cs" />
    <Compile Include="Patch_Uplink.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Dependencies.props" />
  </ItemGroup>
</Project>
